                    <dd id="bi-phone" class="col-sm-8"></dd>

                    <dt class="col-sm-4">Địa chỉ</dt>
                    <dd id="bi-address" class="col-sm-8"></dd>

                    <dt class="col-sm-4">Thực phẩm</dt>
                    <dd id="bi-foods" class="col-sm-8"></dd>

                    <dt class="col-sm-4">Tổng tiền</dt>
                    <dd id="bi-amount" class="col-sm-8"></dd>

                    <dt class="col-sm-4">Phương thức TT</dt>
                    <dd id="bi-paymentmethod" class="col-sm-8"></dd>

                    <dt class="col-sm-4">Ngày đặt</dt>
                    <dd id="bi-created" class="col-sm-8"></dd>
                </dl>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>

    <script>
        // Auto-hide alerts after 3s
        setTimeout(() => {
            document.querySelectorAll('.alert').forEach(alert => {
                alert.classList.add('fade');
                setTimeout(() => alert.remove(), 500);
            });
        }, 3000);

        // Prevent row click when clicking interactive elements (safety)
        document.querySelectorAll('.dropdown, .dropdown *').forEach(el => {
            el.addEventListener('click', function (e) {
                e.stopPropagation();
            });
        });

        // Keep server params consistent with FeedbackPage approach
        const serverParams = {
            pages: Number('@(Model.Pagination?.CurrentPage ?? 1)'),
            pageSize: Number('@Model.PageSize'),
            sortColumn: '@(Model.SortColumn ?? "")',
            sortOrder: '@(Model.SortOrder ?? "")',
            searchTerm: '@(Model.SearchTerm ?? "")'
        };

        // We'll store snapshot as an array (same pattern as FeedbackPage)
        window._bookingSnapshot = window._bookingSnapshot || [];

        function formatTimestamp(ms) {
            if (!ms) return '';
            try {
                const d = new Date(Number(ms));
                const pad = n => n.toString().padStart(2, '0');
                return `${pad(d.getDate())}/${pad(d.getMonth()+1)}/${d.getFullYear()} ${pad(d.getHours())}:${pad(d.getMinutes())}`;
            } catch {
                return '';
            }
        }

        function escapeHtml(s) {
            if (s === null || s === undefined) return '';
            return String(s).replaceAll('&','&amp;').replaceAll('<','&lt;').replaceAll('>','&gt;');
        }

        function applyFiltersAndRenderBookings() {
            const data = window._bookingSnapshot || [];
            const arr = (Array.isArray(data) ? data : []).map(v => ({
                id: v.id ?? '',
                accountId: v.accountId ?? '',
                name: v.name ?? '',
                phone: v.phone ?? '',
                address: v.address ?? '',
                foods: v.foods ?? '',
                amount: v.amount ?? 0,
                payment: v.payment ?? '',
                paymentMethod: v.paymentMethod ?? '',
                createdAt: v.createdAt ?? 0
            }));

            // search
            const search = (document.querySelector('input[name="SearchTerm"]')?.value || serverParams.searchTerm || '').trim().toLowerCase();
            let filtered = arr;
            if (search) {
                filtered = arr.filter(b =>
                    (b.name && b.name.toLowerCase().includes(search)) ||
                    (b.phone && b.phone.toLowerCase().includes(search)) ||
                    (b.address && b.address.toLowerCase().includes(search)) ||
                    (b.foods && b.foods.toLowerCase().includes(search))
                );
            }

            // sort (normalize server-provided column -> lowercase compare like FeedbackPage)
            const sortCol = (serverParams.sortColumn || '').toLowerCase();
            const sortOrder = (serverParams.sortOrder || 'asc').toLowerCase();
            filtered.sort((a, b) => {
                let cmp = 0;
                switch (sortCol) {
                    case 'customername':
                        cmp = (a.name || '').localeCompare(b.name || '', undefined, { sensitivity: 'base' });
                        break;
                    case 'createddate':
                        cmp = (Number(a.createdAt) || 0) - (Number(b.createdAt) || 0);
                        break;
                    default:
                        cmp = (String(a.id || '')).localeCompare(String(b.id || ''), undefined, { sensitivity: 'base' });
                        break;
                }
                return sortOrder === 'asc' ? cmp : -cmp;
            });

            // pagination
            const pageSize = Number(document.querySelector('select[name="PageSize"]')?.value || serverParams.pageSize || 10);
            const currentPage = Number(serverParams.pages || 1);
            const totalItems = filtered.length;
            const totalPages = pageSize > 0 ? Math.max(1, Math.ceil(totalItems / pageSize)) : 1;
            const page = Math.min(Math.max(1, currentPage), totalPages);

            const startIndex = totalItems === 0 ? 0 : (page - 1) * pageSize + 1;
            const endIndex = totalItems === 0 ? 0 : Math.min(page * pageSize, totalItems);
            const pageItems = filtered.slice((page - 1) * pageSize, page * pageSize);

            renderBookingRows(pageItems);
            updateBookingSummary(startIndex, endIndex, totalItems);
        }

        function renderBookingRows(items) {
            const tbody = document.querySelector('table tbody');
            if (!tbody) return;
            tbody.innerHTML = '';
            if (!items || items.length === 0) {
                const tr = document.createElement('tr');
                const td = document.createElement('td');
                td.colSpan = 7;
                td.className = 'text-center text-muted';
                td.textContent = 'Chưa có đơn hàng nào.';
                tr.appendChild(td);
                tbody.appendChild(tr);
                return;
            }

            for (const b of items) {
                const tr = document.createElement('tr');
                tr.style.cursor = 'pointer';
                tr.dataset.id = String(b.id ?? '');
                tr.dataset.accountid = b.accountId ?? '';
                tr.dataset.name = b.name ?? '';
                tr.dataset.phone = b.phone ?? '';
                tr.dataset.address = b.address ?? '';
                tr.dataset.foods = b.foods ?? '';
                tr.dataset.amount = b.amount ?? 0;
                tr.dataset.payment = b.payment ?? '';
                tr.dataset.paymentmethod = b.paymentMethod ?? '';
                tr.dataset.createdtext = formatTimestamp(b.createdAt);

                tr.addEventListener('click', () => {
                    if (tr.closest('.dropdown')) return;
                    showBookingInfo(tr);
                });

                tr.innerHTML = `
                    <td>${escapeHtml(tr.dataset.id)}</td>
                    <td><strong>${escapeHtml(b.name)}</strong></td>
                    <td>${escapeHtml(b.phone)}</td>
                    <td>${escapeHtml(b.address)}</td>
                    <td class="text-truncate" style="max-width:220px">${escapeHtml(b.foods)}</td>
                    <td class="text-end">${formatTimestamp(b.createdAt)}</td>
                    <td class="text-end">${Number(b.amount || 0).toLocaleString()} VNĐ</td>
                `;
                tbody.appendChild(tr);
            }
        }

        function updateBookingSummary(startIndex, endIndex, totalItems) {
            const el = document.getElementById('bookingSummary');
            if (el) el.textContent = `Hiển thị ${startIndex} đến ${endIndex} của ${totalItems} đơn hàng`;
        }

        // showBookingInfo unchanged behaviour
        function showBookingInfo(el) {
            if (!el) return;
            if (el.closest('.dropdown')) return;

            const ds = el.dataset || {};
            const id = ds.id || '';
            const name = ds.name || '';
            const phone = ds.phone || '';
            const address = ds.address || '';
            const foods = ds.foods || '';
            const amount = ds.amount || '';
            const paymentMethod = ds.paymentmethod || '';
            const created = ds.createdtext || '';

            const fill = (idSel, value) => {
                const node = document.getElementById(idSel);
                if (node) node.textContent = value;
            };

            fill('bi-id', id);
            fill('bi-name', name);
            fill('bi-phone', phone);
            fill('bi-address', address);
            fill('bi-foods', foods);
            fill('bi-amount', amount ? (Number(amount).toLocaleString() + ' VNĐ') : '');
            fill('bi-paymentmethod', paymentMethod);
            fill('bi-created', created);

            const modalEl = document.getElementById('bookingInfoModal');
            const modal = bootstrap.Modal.getOrCreateInstance(modalEl);
            modal.show();
        }

        // ---------- SignalR connection ----------
        const connection = new signalR.HubConnectionBuilder()
            .withUrl('/hubs/bookings')
            .withAutomaticReconnect()
            .build();

        connection.on('BookingsUpdated', (bookings) => {
            try {
                // keep array snapshot (like FeedbackPage)
                window._bookingSnapshot = Array.isArray(bookings) ? bookings : (bookings ? Object.values(bookings) : []);
            } catch (ex) {
                console.error('BookingsUpdated handler error', ex);
                window._bookingSnapshot = [];
            }
            applyFiltersAndRenderBookings();
        });

        connection.start().then(() => {
            console.info('Connected to BookingHub (SignalR)');
        }).catch(err => {
            console.error('SignalR connection error', err);
        });

        // initial render uses server-rendered rows (they will be replaced when SignalR event arrives)
    </script>
}
