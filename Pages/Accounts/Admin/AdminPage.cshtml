                                   asp-route-pages="@Model.Pagination?.CurrentPage"
                                   asp-route-PageSize="@Model.PageSize"
                                   asp-route-SearchTerm="@Model.SearchTerm"
                                   class="@GetSortClass("phone")"
                                   style="text-decoration:none;">
                                    Số điện thoại @Html.Raw(GetSortIcon("phone"))
                                </a>
                            </th>
                            <th>Email</th>
                            <th>
                                <a asp-page="./AdminPage"
                                   asp-route-SortColumn="CreatedDate"
                                   asp-route-SortOrder="@GetSortOrder("CreatedDate")"
                                   asp-route-pages="@Model.Pagination?.CurrentPage"
                                   asp-route-PageSize="@Model.PageSize"
                                   asp-route-SearchTerm="@Model.SearchTerm"
                                   class="@GetSortClass("CreatedDate")"
                                   style="text-decoration:none;">
                                    Ngày tạo @Html.Raw(GetSortIcon("CreatedDate"))
                                </a>
                            </th>
                            <th style="width:60px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Admins.Any())
                        {
                            @foreach (var admin in Model.Admins)
                            {
                                <tr style="cursor:pointer;"
                                    data-id="@admin.id"
                                    data-username="@admin.username"
                                    data-firstname="@admin.firstName"
                                    data-lastname="@admin.lastName"
                                    data-phone="@admin.phone"
                                    data-email="@admin.email"
                                    data-role="@admin.role"
                                    data-address="@admin.address"
                                    data-avatar="@admin.avatar"
                                    data-lastlogin="@((admin.LastLoginAt == default) ? "" : admin.LastLoginAt.ToLocalTime().ToString("o"))"
                                    data-lockout="@((admin.LockoutEnd == default) ? "" : admin.LockoutEnd.ToLocalTime().ToString("o"))"
                                    data-active="@admin.isActive"
                                    data-failed="@admin.failedLoginAttempts"
                                    data-createdtext="@(admin.createdAt == default ? "" : admin.createdAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm"))"
