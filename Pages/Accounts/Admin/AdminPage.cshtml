            </div>
            <div class="d-flex align-items-center gap-2">
                <form method="get" class="d-flex align-items-center" style="min-width:320px;">
                    <input type="text"
                           name="SearchTerm"
                           value="@Model.SearchTerm"
                           class="form-control form-control-sm"
                           placeholder="Tìm kiếm tên/username/email/phone..." />
                    <input type="hidden" name="pages" value="@Model.Pagination?.CurrentPage" />
                    <input type="hidden" name="PageSize" value="@Model.PageSize" />
                    <input type="hidden" name="SortColumn" value="@Model.SortColumn" />
